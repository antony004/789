@page
@model ReferralCodeModel
@{
    ViewData["Title"] = "Referral Code";
}
<head>
    <link rel="stylesheet" href="css/Referral.css" />
</head>
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Enter Referral Code</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.RefCode" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.RefCode"></label>
                <span asp-validation-for="Input.RefCode" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}